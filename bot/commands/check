const { checkIn, checkOut, handleLunchAnswer } = require('../utils/checkUtils/actions');
const sessionAuthMiddleware = require('../middleware/sessionAuthMiddleware');

module.exports = (bot) => {

bot.action(/^checkin_(.+)$/, sessionAuthMiddleware, checkIn);
bot.action(/^checkout_(.+)$/, sessionAuthMiddleware, checkOut);
bot.action(/^lunch_(yes|no)$/, sessionAuthMiddleware, handleLunchAnswer);

};